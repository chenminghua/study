<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.minghua.study.mybatis.dao.CityDao">
    <resultMap id="BaseResultMap" type="com.minghua.study.mybatis.model.City">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="province" property="province" />
        <result column="country" property="country" />
    </resultMap>

    <parameterMap id="City" type="com.minghua.study.mybatis.model.City" />

    <sql id="Base_Column_List">
        id, name, province, country
    </sql>

    <select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        from city
        where name=#{name}
    </select>

    <!--返回一个list-->
    <select id="listByProvinceName" resultType="com.minghua.study.mybatis.model.City">
        select
        <include refid="Base_Column_List" />
        from city
        where province=#{provinceName}
    </select>

    <!--返回一个map-->
    <resultMap id="CityMap" type="com.minghua.study.mybatis.model.City">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="province" column="province"/>
        <result property="country" column="country"/>
    </resultMap>

    <select id="findCitiesByProvinceWithMap" resultMap="CityMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        from city
        where province=#{provinceName}
    </select>

    <insert id="save" parameterType="com.minghua.study.mybatis.model.City">
        insert into city
        (name,province,country) values(#{name},#{province},#{country})
    </insert>

</mapper>